<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
    android:padding="16dp">

    <!-- Gambar Produk -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="73dp"
        android:layout_height="72dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_product_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Nama Produk -->
    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Product Name"
        android:textColor="@android:color/black"
    android:textSize="16sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@id/btnEditProduct"
    app:layout_constraintStart_toEndOf="@id/productImage"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Harga Produk -->
    <TextView
        android:id="@+id/tvProductPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Price"
        android:textColor="@android:color/black"
    app:layout_constraintEnd_toStartOf="@id/btnEditProduct"
    app:layout_constraintStart_toEndOf="@id/productImage"
    app:layout_constraintTop_toBottomOf="@id/tvProductName" />

    <!-- Stok Produk -->
    <TextView
        android:id="@+id/tvProductStock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Stock: 0"
        android:textColor="@android:color/black"
    app:layout_constraintStart_toEndOf="@id/productImage"
    app:layout_constraintTop_toBottomOf="@id/tvProductPrice"
    app:layout_constraintEnd_toStartOf="@id/btnEditProduct" />

    <!-- Tombol Hapus Produk -->
    <ImageButton
        android:id="@+id/btnDeleteProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/delete_customer"
        android:src="@android:drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tombol Edit Produk -->
    <ImageButton
        android:id="@+id/btnEditProduct"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/edit_customer"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toStartOf="@id/btnDeleteProduct"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
